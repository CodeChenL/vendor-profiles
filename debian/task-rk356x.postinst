#!/bin/sh
set -e

action="$1"

if [ "$action" = configure ]; then
	cat << EOF > /etc/apt/preferences.d/librga2
Package: librga2
Pin: version 2.1.0-1
Pin-Priority: 1500
EOF
	cat << EOF > /etc/apt/preferences.d/camera-engine-rkaiq
Package: camera-engine-rkaiq
Pin: version 5.0x1.2-rc2
Pin-Priority: 1500
EOF
fi

#DEBHELPER#

exit 0